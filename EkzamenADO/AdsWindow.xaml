<Window x:Class="EkzamenADO.AdsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Мої оголошення" Height="500" Width="750"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Кнопки "Додати" и "Мій профіль" -->
            <RowDefinition Height="*"/>
            <!-- Список оголошень -->
            <RowDefinition Height="Auto"/>
            <!-- Кнопки редагувати / видалити -->
        </Grid.RowDefinitions>

        <!-- Верхняя панель кнопок -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
            <Button Content="Додати оголошення" Width="200" Height="30" Click="AddAd_Click" Margin="0,0,10,0"/>
            <Button Content="Мій профіль" Width="120" Height="30" Click="Profile_Click"/>
        </StackPanel>

        <!-- Список оголошень -->
        <ListView x:Name="AdList" Grid.Row="1" Margin="0,10,0,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Назва" DisplayMemberBinding="{Binding Title}" Width="150"/>
                    <GridViewColumn Header="Опис" DisplayMemberBinding="{Binding Description}" Width="250"/>
                    <GridViewColumn Header="Ціна" DisplayMemberBinding="{Binding Price}" Width="80"/>
                    <GridViewColumn Header="Категорія" DisplayMemberBinding="{Binding CategoryName}" Width="120"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Кнопки управления объявлением -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Редагувати" Width="100" Margin="10" Click="EditAd_Click"/>
            <Button Content="Видалити" Width="100" Margin="10" Click="DeleteAd_Click"/>
        </StackPanel>
    </Grid>
</Window>
