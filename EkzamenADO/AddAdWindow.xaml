<Window x:Class="EkzamenADO.AddAdWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Додати оголошення" Height="450" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Назва:"/>
        <TextBox x:Name="TitleBox" Grid.Row="1" Margin="0,5"/>

        <TextBlock Text="Опис:" Grid.Row="2"/>
        <TextBox x:Name="DescriptionBox" Grid.Row="3" Margin="0,5"/>

        <TextBlock Text="Ціна:" Grid.Row="4"/>
        <TextBox x:Name="PriceBox" Grid.Row="5" Margin="0,5"/>

        <TextBlock Text="Категорія:" Grid.Row="6" Margin="0,10,0,0"/>
        <ComboBox x:Name="CategoryBox" Grid.Row="7" Margin="0,5"/>

        <Button Content="Вибрати зображення" Grid.Row="8" Margin="0,10,0,0" Click="ChooseImage_Click"/>
        <TextBlock x:Name="ImageLabel" Grid.Row="9" Margin="0,5"/>

        <Button Content="Додати" Grid.Row="10" Margin="0,10,0,0" Click="Add_Click" HorizontalAlignment="Center" Width="150"/>
    </Grid>
</Window>
