<Window x:Class="EkzamenADO.ProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Мій профіль" Height="300" Width="350"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Ім'я:"/>
        <TextBox x:Name="NameBox" Grid.Row="1" Margin="0,5"/>

        <TextBlock Text="Email:" Grid.Row="2"/>
        <TextBlock x:Name="EmailLabel" Grid.Row="3" Margin="0,5" FontWeight="Bold"/>

        <TextBlock Text="Телефон:" Grid.Row="4"/>
        <TextBox x:Name="PhoneBox" Grid.Row="5" Margin="0,5"/>

        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Зберегти" Click="Save_Click" Width="100" Margin="5"/>
            <Button Content="Видалити акаунт" Click="Delete_Click" Width="150" Margin="5" Background="DarkRed" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
